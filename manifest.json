{
  "manifest_version": 3,
  "name": "Auto Linkify on Paste for Gmail",
  "short_name": "Linkify",
  "description": "When pasting a URL on top of existing text it will be converted into a link.",
  "version": "1.0",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "js": [
        "main.js"
      ],
      "matches": [
        "https://mail.google.com/*"
      ]
    }
  ]
}
